# Maintainer: Christopher Kelley <christopher@resolvetech.biz>
pkgname=ctl365
pkgver=0.1.0
pkgrel=1
pkgdesc="Enterprise-grade Microsoft 365 deployment automation CLI"
arch=('x86_64')
url="https://github.com/resotech/ctl365"
license=('LicenseRef-Proprietary')
depends=('gcc-libs')
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/resotech/ctl365/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$pkgname-$pkgver"
    cargo build --release --locked
}

check() {
    cd "$pkgname-$pkgver"
    cargo test --release --locked
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 "target/release/ctl365" "$pkgdir/usr/bin/ctl365"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
    install -Dm644 COMMANDS.md "$pkgdir/usr/share/doc/$pkgname/COMMANDS.md"
}
